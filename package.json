{
  "name": "scholardemon",
  "version": "1.0.0",
  "description": "A comprehensive academic paper management system inspired by Google Scholar",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon backend/server.js",
    "client": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "test": "jest --coverage",
    "test:backend": "jest backend/tests",
    "test:frontend": "cd frontend && npm test",
    "db:create": "node backend/db/createdb.js",
    "db:migrate": "node backend/db/migrate.js",
    "db:seed": "node backend/db/seed.js",
    "db:setup": "npm run db:create && npm run db:migrate && npm run db:seed",
    "start": "node backend/server.js"
  },
  "keywords": [
    "scholar",
    "dbms",
    "academic",
    "papers",
    "pern"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "pg-format": "^1.0.4"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  }
}
